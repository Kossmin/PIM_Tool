@model SPK_PIM.Models.IndexPageModel

@{
    ViewBag.Title = "Index";
    var url = "/Project/Index?_pageindex=";
}

<div class="container-fluid">
    
    <div>
        <h2>Project List</h2>

        <p>
            @Html.ActionLink("Create New", "Create", new { returnUrl = Request.RawUrl })
            @using (Html.BeginForm("Index", "Project", FormMethod.Get))
            {
            <p>
                Genre: @Html.DropDownList("_status", "All")
                Title: @Html.TextBox("_searchstring")
                <input type="submit" value="Filter" />
                <input type="reset" value="Reset search" />
            </p>
        }
            </p>
            <form action="~/project/Delete" method="get">
                <table class="table table-bordered">
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model._Projects.First().ProjectNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._Projects.First().ProjectName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._Projects.First().Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._Projects.First().Customer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._Projects.First().StartDate)
                        </th>
                        <th>
                            Delete
                        </th>
                    </tr>

                    @foreach (var item in Model._Projects)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="employeeIds" id="employeeIds" onchange="ToggleDeleteButton()" value=@item.ID />
                            </td>
                            <td>
                                @Html.ActionLink(item.ProjectNumber, "Details", new { id = item.ID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                                <a onclick="$(this).closest('form').submit()" hidden id=@item.ID>
                                    <i class="fas fa-trash-alt" style="color: orangered"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </form>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model._PageIndex != 1)
                    {
                        var Furl = url+(Model._PageIndex -1).ToString();
                        <li>
                            <a href=@Furl aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @{
                        var tmp = Model._MaxPage / Model._NumberOfRows;
                        if ((Model._MaxPage % Model._NumberOfRows) != 0)
                        {
                            tmp += 1;
                        }
                    }
                    @for (int i = 1; i <= tmp; i++)
                    {
                        var Furl = url + i;

                        <li><a href=@Furl>@i</a></li>
                    }
                    @if (Model._PageIndex != tmp)
                    {
                        var Furl = url + (Model._PageIndex + 1).ToString();
                        <li>
                            <a href=@Furl aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('input[type="checkbox"]').click(function () {
                if ($(this).prop("checked") == true) {
                    let id = $(this).prop("value");
                    $("a#" + id).show();
                }
                else if ($(this).prop("checked") == false) {
                    let id = $(this).prop("value");
                    $("a#" + id).hide();
                }
            });
        });
    </script>
    }
