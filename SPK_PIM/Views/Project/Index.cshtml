@model SPK_PIM.Models.IndexPageModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { returnUrl = Request.RawUrl })
    @using (Html.BeginForm("Index", "Project", FormMethod.Get))
    {
    <p>
        Genre: @Html.DropDownList("_status", "All")
        Title: @Html.TextBox("_searchstring")
        <input type="submit" value="Filter" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().GroupID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().ProjectNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Projects.First().Version)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model._Projects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li>
            <a href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @{ 
            var url = "/Project/Index?_pageindex=";
            var tmp = Model._MaxPage / Model._NumberOfRows;
            if((Model._MaxPage % Model._NumberOfRows) != 0)
            {
                tmp += 1;
            }
        }
        @for (int i = 1; i <= tmp; i++)
        {
            var Furl = url + i;

            <li><a href=@Furl>@i</a></li>
            }
        <li>
            <a href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>