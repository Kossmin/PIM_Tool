@model SPK_PIM.Models.IndexPageModel

@{
    ViewBag.Title = "Index";
    var url = "/Project/Index?_pageindex=";
}

<div class="container-fluid">
    
    <div>
        <h2>Project List</h2>

        <p>
            @Html.ActionLink(Resources.Resources.CreateNew, "Create", new { returnUrl = Request.RawUrl })
            @using (Html.BeginForm("Index", "Project", FormMethod.Get))
            {
            <p>
                Genre: @Html.DropDownList("_status", "All")
                Title: @Html.TextBox("_searchstring")
                <input type="submit" value="@Resources.Resources.Filter" />
                <input type="button" value="@Resources.Resources.ResetSearch" onclick="Reset()" />
            </p>
        }
            </p>
            <form action="~/project/Delete" method="get">
                <table class="table table-bordered">
                    <tr>
                        <th></th>
                        <th>
                            @Html.ActionLink(Resources.Resources.Number, "Index", new
                            {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = (Model._SortingKind == null || Model._SortingKind != "projectnumberup") ? "projectnumberup" : "projectnumber",
                           _pageIndex = Model._PageIndex,
                           _numberOfRows = Model._NumberOfRows
                            })
                            @if (Model._SortingKind == "projectnumberup")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (Model._SortingKind == "projectnumber")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                        </th>
                        <th>
                            @Html.ActionLink(Resources.Resources.ProjectName, "Index", new
                            {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = (Model._SortingKind == null || Model._SortingKind != "projectnameup") ? "projectnameup" : "projectname",
                           _pageIndex = Model._PageIndex,
                           _numberOfRows = Model._NumberOfRows
                            })
                            @if (Model._SortingKind == "projectnameup")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (Model._SortingKind == "projectname")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                        </th>
                        <th>
                            @Html.ActionLink(Resources.Resources.Status, "Index", new
                            {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = (Model._SortingKind == null || Model._SortingKind != "statusup") ? "statusup" : "status",
                           _pageIndex = Model._PageIndex,
                           _numberOfRows = Model._NumberOfRows
                            })
                            @if (Model._SortingKind == "statusup")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (Model._SortingKind == "status")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                        </th>
                        <th>
                            @Html.ActionLink(Resources.Resources.Customer, "Index", new
                            {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = (Model._SortingKind == null || Model._SortingKind != "customerup") ? "customerup" : "customer",
                           _pageIndex = Model._PageIndex,
                           _numberOfRows = Model._NumberOfRows
                            })
                            @if (Model._SortingKind == "customerup")
                            {
                                <i class="fas fa-sort-up"></i>
                            }
                            else if (Model._SortingKind == "customer")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                        </th>
                        <th>
                            @Html.ActionLink(Resources.Resources.StartDate, "Index", new
                            {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = (Model._SortingKind == null || Model._SortingKind != "startdateup") ? "startdateup" : "startdate",
                           _pageIndex = Model._PageIndex,
                           _numberOfRows = Model._NumberOfRows
                            })
                            @if (Model._SortingKind == "startdateup")
                            {
                               <i class="fas fa-sort-up"></i>
                            }
                            else if (Model._SortingKind == "startdate")
                            {
                                <i class="fas fa-sort-down"></i>
                            }
                        </th>
                        <th>
                            @Resources.Resources.Delete
                        </th>
                    </tr>

                    @foreach (var item in Model._Projects)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="employeeIds" id="employeeIds" onchange="ToggleDeleteButton()" value=@item.ID />
                            </td>
                            <td>
                                @Html.ActionLink(item.ProjectNumber, "Details", new { id = item.ID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer)
                            </td>
                            <td>
                                @{
                                    var dateFormat = "";
                                    HttpCookie cookie = Request.Cookies["_culture"];
                                    var cookieValue = "vi";
                                    var language = "";
                                    <script>
                                        $.ajax({
                                            url: "http://ajaxhttpheaders.appspot.com",
                                            dataType: 'jsonp',
                                            success: function (headers) {
                                                language = headers['Accept-Language'];
                                                @language = language;
                                            }
                                        });
                                    </script>
                                    if (cookie != null)
                                    {
                                        cookieValue = cookie.Value;
                                    }
                                    else
                                    {
                                        cookieValue = language;
                                    }
                                    if (cookieValue == "vi")
                                    {
                                        dateFormat = "dd-MM-yyyy";
                                    }
                                    else
                                    {
                                        dateFormat = "MM-dd-yyyy";
                                    }
                                    var date = item.StartDate.ToString(dateFormat);
                                }
                                @Html.DisplayFor(modelItem => date)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                                <a onclick="$(this).closest('form').submit()" hidden id=@item.ID>
                                    <i class="fas fa-trash-alt" style="color: orangered"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </form>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model._PageIndex != 1)
                    {
                        var Furl = url+(Model._PageIndex -1).ToString();
                        <li>
                            <a href=@Furl aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @{
                        var tmp = Model._MaxPage / Model._NumberOfRows;
                        if ((Model._MaxPage % Model._NumberOfRows) != 0)
                        {
                            tmp += 1;
                        }
                    }
                    @for (int i = 1; i <= tmp; i++)
                    {
                        var Furl = url + i;

                        <li>@Html.ActionLink(i.ToString(), "Index", new {
                           _status = (Model.Status != null) ? Model.Status : "",
                           _searchString = (Model._SearchString != null) ? Model._SearchString : "",
                           _sortingKind = Model._SortingKind,
                           _pageIndex = i,
                           _numberOfRows = Model._NumberOfRows
                       })</li>
                    }
                    @if (Model._PageIndex != tmp)
                    {
                        var Furl = url + (Model._PageIndex + 1).ToString();
                        <li>
                            <a href=@Furl aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
</div>


<form action="~/Project/Index" method="get" hidden>
    <input name="_sortingKind" id="_sortingKind"/>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('input[type="checkbox"]').click(function () {
                if ($(this).prop("checked") == true) {
                    let id = $(this).prop("value");
                    $("a#" + id).show();
                }
                else if ($(this).prop("checked") == false) {
                    let id = $(this).prop("value");
                    $("a#" + id).hide();
                }
            });
        });

        function Reset() {
            const txtSearchString = document.getElementsByName("_searchstring")[0];
            txtSearchString.value = '';
            debugger;
            const sltStatus = document.getElementsByName("_status")[0];
            $("[selected]").removeAttr("selected");
            sltStatus.firstChild.setAttribute("selected", "selected");
        }
    </script>
    }
